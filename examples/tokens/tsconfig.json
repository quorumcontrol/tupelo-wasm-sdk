{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "declaration": false, 
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "typeRoots": ["src/@types", "./node_modules/@types"],
      "esModuleInterop": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }